[user]
	name = Winfield Peterson
	email = wpeterson@brightcove.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status #-s
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  m = merge
  theirs = checkout --theirs
  ours = checkout --ours
  leaderboard = shortlog -n -s
  po = push origin

[core]
  editor = mate -w
