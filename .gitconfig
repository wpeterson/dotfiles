[user]
	name = Winfield Peterson
	email = winfield.peterson@babylist.com
	signingkey = /Users/winfield/.ssh/id_rsa

[color]
	ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status #-s
  ci = commit
  br = branch
  co = checkout
  checkotu = checkout
  df = diff
  lg = log -p
  m = merge
  theirs = checkout --theirs
  ours = checkout --ours
  leaderboard = shortlog -n -s
  po = push origin
  ls = log --name-only
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  fresh = checkout master; pull --rebase; checkout -; rebase master
  words = diff --color-words
  commmit = commit
  comit = commit
  chery-picl = cherry-pick

[core]
  editor = vim

[diff]
	algorithm = patience
	context = 5
	submodule = log

[push]
   default = current
[status]
	submodulesummary = true
[commit]
	gpgsign = true
[gpg]
	format = ssh
